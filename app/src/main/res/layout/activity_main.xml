<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:inputType="textPersonName"
            android:hint="Search our store"
            android:fontFamily="@font/gothici"
            android:background="@drawable/rounded"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="4"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/black" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerImageSlider"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Bringing Greece right to your doorstep.\nGet your favourite greek products here!"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:fontFamily="@font/gothicb"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gourmet Greece Groceries"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/lobster"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="40dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_height="1dp"
                android:background="@color/black"
                android:orientation="horizontal"></LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/eat_good_eat_greek"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="108dp"
                    android:layout_height="108dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/eat_good_eat_greek" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="108dp"
                    android:layout_height="108dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/eat_good_eat_greek" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="108dp"
                    android:layout_height="108dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/eat_good_eat_greek" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="108dp"
                    android:layout_height="108dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/eat_good_eat_greek" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="108dp"
                    android:layout_height="108dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/eat_good_eat_greek" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="108dp"
                    android:layout_height="108dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    app:srcCompat="@drawable/eat_good_eat_greek" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivDisplay"
                        android:layout_width="108dp"
                        android:layout_height="108dp"
                        android:layout_marginLeft="15dp"
                        android:layout_margin="10dp"
                        android:layout_gravity="left"
                        app:srcCompat="@drawable/eat_good_eat_greek" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvDisplayName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:fontFamily="@font/lobster"
                            android:text="TextView" />

                        <TextView
                            android:id="@+id/tvDisplayPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:textSize="10dp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="TextView" />

                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:layout_height="1dp"
                            android:background="@color/black"
                            android:orientation="horizontal">

                        </LinearLayout>

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/black"
                            android:text="Add To Cart" />

                        <Button
                            android:id="@+id/button3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/black"
                            android:text="Buy With G Pay" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textSize="10dp"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:text="@string/paymentOptions" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            android:textSize="10dp"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:layout_marginTop="15dp"
                            android:text="Full details ->" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:fontFamily="@font/lobster"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="A very Big THANK YOU" />

            <TextView
                android:id="@+id/textView9"
                android:layout_marginTop="20dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:fontFamily="@font/gothic"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Thank you for gracing our humble shop. At the Greek Goodies, We promise to give you the best price we can possibly give. To give you the simple shopping experience so you can enjoy the finest Greek Goodies!\n\nDo give us time as we expand th plethora of food and drinks available for you." />

            <TextView
                android:id="@+id/textView10"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:fontFamily="@font/gothicb"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Thank you" />

            <TextView
                android:id="@+id/textView11"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:fontFamily="@font/gothic"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Love,\nThe Greek Goodies." />

            <TextView
                android:id="@+id/textView12"
                android:layout_marginTop="20dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:fontFamily="@font/gothicb"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="** Order/s must be made before 8pm for next day delivery between 4pm to 9pm.\nThank you!" />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/black"
        app:itemIconTint="@color/white"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_navigation"/>

</LinearLayout>