<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateAdminFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Admin Account"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/lobster"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="40dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:layout_height="1dp"
                android:background="@color/black"
                android:orientation="horizontal">

            </LinearLayout>

            <EditText
                android:id="@+id/etNewAdminFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:fontFamily="@font/gothici"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/selector_edittext"
                android:hint="First Name" />

            <EditText
                android:id="@+id/etNewAdminLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothici"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/selector_edittext"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Last Name"/>

            <EditText
                android:id="@+id/etNewAdminEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:fontFamily="@font/gothici"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/selector_edittext"
                android:ems="10"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/etNewAdminPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/selector_edittext"
                android:ems="10"
                android:fontFamily="@font/gothici"
                android:hint="Password"
                android:inputType="textPassword" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCreateAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/gothicb"
                    android:textColor="@color/white"
                    android:text="CREATE" />

                <Button
                    android:id="@+id/btnCancelAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/black"
                    android:fontFamily="@font/gothicb"
                    android:textColor="@color/white"
                    android:text="Cancel" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>