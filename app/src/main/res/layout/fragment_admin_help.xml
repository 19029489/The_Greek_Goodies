<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AdminHelpFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Enquiries"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/lobster"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="40dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:layout_height="1dp"
        android:background="@color/black"
        android:orientation="horizontal"/>

    <EditText
        android:id="@+id/etSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:fontFamily="@font/gothici"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/selector_edittext"
        android:hint="Subject" />

    <EditText
        android:id="@+id/etEnquiry"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:fontFamily="@font/gothici"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/selector_edittext"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter enquiries here."/>

    <Button
        android:id="@+id/btnCreateAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/gothicb"
        android:textColor="@color/white"
        android:text="Send" />



</LinearLayout>